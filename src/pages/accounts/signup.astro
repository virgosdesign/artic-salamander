---
import Layout from '../../layouts/PageLayout.astro';
import SignUp from '../../components/static/SignUp.astro';

const metadata = {
  title: 'signup',
};
---

<Layout metadata={metadata}>
  <SignUp
    action="/api/signup"
    title="Get started with Secure Athlete."
    subtitle="Secure your your financial future with Secure Athlete."
    inputs={[
      {
        type: 'text',
        name: 'first_name',
        label: 'First Name',
      },
      {
        type: 'text',
        name: 'last_name',
        label: 'Last Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'password',
        name: 'password',
        label: 'Password',
      },
      {
        type: 'password',
        name: 'confirm_password',
        label: 'Confirm Password',
      },
    ]}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Begin your journey to financial freedom today."
    button="Signup"
  />
</Layout>

